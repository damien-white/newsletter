root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,js,jsx,ts,tsx,vue}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.toml]
max_line_length = 80

[*.{yml,yaml,sh}]
indent_size = 2
